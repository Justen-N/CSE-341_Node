<%- include ('./includes/header.ejs')%>
    <h2>Books</h2>
    <% if (books.length >0) { %>
    <ul>
        <% books.forEach((book)=>{%>
            <li>
                <h3><%= book.title %></h3><h4><%= book.author %></h4>
                <p> <%= book.summary %></p>
            </li>
        <% }) %>
    </ul>
    <% } else { %>
        <h1>No Books Found!</h1>
    <% } %>
